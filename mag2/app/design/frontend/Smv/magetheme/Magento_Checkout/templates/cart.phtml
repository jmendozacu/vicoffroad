<script type="text/javascript">
    require(['jquery'],function($){
    jQuery(document).ready(function(){
        jQuery('.qty-decrease').click(function(){
            var qty = jQuery(this).next().val();
            if(qty > 1){
                jQuery(this).next().val(jQuery(this).next().val() - 1);
            }
        });
        jQuery('.qty-increase').click(function(){
            var newqty = parseInt(jQuery(this).prev().val()) + 1;
            jQuery(this).prev().val(newqty);
        });
    });
    });
    </script>