<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <amasty_cart>
            <general>
                <enable>1</enable>
                <time>5</time>
                <use_product_page>1</use_product_page>
                <product_button>1</product_button>
                <linkcompare>1</linkcompare>
                <wishlist>1</wishlist>
            </general>
            <display>
                <type_loading>1</type_loading>
                <align>0</align>
                <disp_count>1</disp_count>
                <disp_sum>1</disp_sum>
                <display_qty>1</display_qty>
                <disp_checkout_button>1</disp_checkout_button>
            </display>
            <visual>
                <background>DBDBDB</background>
                <header_background>BFBFBF</header_background>
                <text>707070</text>
                <button_text>FFFFFF</button_text>
                <left_button>7FC7EB</left_button>
                <right_button>9A9A9A</right_button>
            </visual>
        </amasty_cart>
    </default>
</config>
