<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Ubertheme_UbContentSlider::ubcontentslider_content" title="UB Content Slider" sortOrder="10" >
                        <resource id="Ubertheme_UbContentSlider::slide" title="Manage Sliders" sortOrder="1">
                            <resource id="Ubertheme_UbContentSlider::slide_save" title="Save Slider" sortOrder="1" />
                            <resource id="Ubertheme_UbContentSlider::slide_delete" title="Delete Slider" sortOrder="2" />
                        </resource>
                        <resource id="Ubertheme_UbContentSlider::item" title="Manage Slide Items" sortOrder="2">
                            <resource id="Ubertheme_UbContentSlider::item_save" title="Save Slide Item" sortOrder="1" />
                            <resource id="Ubertheme_UbContentSlider::item_delete" title="Delete Slide Item" sortOrder="2" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <!-- this resource id we can use in system.xml for section -->
                            <resource id="Ubertheme_UbContentSlider::settings" title="UbContentSlider Section" sortOrder="1" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>